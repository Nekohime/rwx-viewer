{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:import/recommended",
      "plugin:import/errors",
      "plugin:import/warnings"
    ],
    "plugins": ["import"],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "rules": {
      "semi": [2, "always"]
    },
    "globals": {
      "require": true
    }
}
